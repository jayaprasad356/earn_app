<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CallUsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="130dp"
            android:background="@drawable/bg6">

            <ImageView
                android:id="@+id/callcenter"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/callcenter" />


            <TextView
                android:id="@+id/merlin_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callcenter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Earn App Help Center"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/working_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/merlin_txt"
                android:layout_centerHorizontal="true"
                android:text="Working Hours(09:00 AM-10:00 PM)"
                android:textColor="#FFFFFF"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/help_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/working_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="We are here to help you as soon as possible"
                android:textColor="#FFFFFF"
                android:textSize="13dp" />

            <Button
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/help_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/bgwhite"
                android:text="Contact Us"
                android:textAllCaps="false"
                android:textColor="#22E614"

                app:backgroundTint="@null" />



        </RelativeLayout>

    </RelativeLayout>




</FrameLayout>