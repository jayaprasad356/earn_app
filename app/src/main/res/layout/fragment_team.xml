<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.TeamFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout1">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulishregular"
                android:id="@+id/friendtxt"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:textSize="10dp"
                android:text="@string/refer_instructions"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulishregular"
                android:textSize="15dp"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:drawablePadding="30dp"
                android:drawableEnd="@drawable/ic_copy"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/code_txt"
                android:text="40404"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/level1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:checked="true"
                    android:text="Level 1"
                    app:checkedIconEnabled="false"
                    app:checkedIcon="@null"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                     />
                <com.google.android.material.chip.Chip
                    android:id="@+id/level2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:textAlignment="center"
                    app:checkedIconEnabled="false"
                    app:checkedIcon="@null"
                    android:focusable="true"
                    android:text="Level 2"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    />
                <com.google.android.material.chip.Chip
                    android:id="@+id/level3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:textAlignment="center"
                    app:checkedIconEnabled="false"
                    app:checkedIcon="@null"
                    android:focusable="true"
                    android:text="Level 3"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    />
        </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:id="@+id/linear_2"
            android:layout_below="@+id/linear_1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg3">

                <TextView
                    android:id="@+id/team_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#E61C1C"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Size"
                    android:textColor="#E61C1C"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/bg4">

                <TextView
                    android:id="@+id/total_contribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#7047CF"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contribution"
                    android:textColor="#7047CF"
                    android:textSize="15dp"/>

            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Number"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Contribution"
            android:textColor="#000"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/nametxt"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#000000" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        tools:listitem="@layout/team_lyt" />





</RelativeLayout>