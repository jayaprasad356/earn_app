<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="LIVE"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColor="#F60606"
            android:background="@drawable/bg3"
            android:drawableStart="@drawable/ic_red_circle"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="#D1D0D0"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_rupee1"
            android:text="100"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginStart="5dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15dp"
        android:layout_below="@+id/linear"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg1"
        android:hint="jack Son"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/mobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Mobile Number"
        android:textSize="15dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/mobileno"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg1"
        android:hint="9090090909"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textSize="15dp"
        android:textColor="#000" />
    <EditText
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg1"
        android:hint="jp@gmail.com"
        android:padding="10dp"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/email1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bgcurvegreen"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email1"
            android:layout_marginStart="90dp"
            android:padding="10dp"
            android:text="Proceed with"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email1"
            android:drawableStart="@drawable/ic_rupee"
            android:text="100"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


    </LinearLayout>
</RelativeLayout>