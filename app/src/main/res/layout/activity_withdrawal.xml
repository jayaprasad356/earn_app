<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WithdrawalActivity">


    <TextView
        android:id="@+id/earning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Earning Rs. 0"
        android:textColor="#B1B1B1"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etWithdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg7"
        android:inputType="number"
        android:drawableStart="@drawable/ic_rupee1"
        android:hint="Enter the withdrawal amount"
        android:padding="15dp" />


    <Button
        android:id="@+id/btnWithdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Withdrawal"
        android:layout_margin="30dp"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Withdrawal Time  9AM To 7PM

 Withdrawal Processing Time is  5 Min to 20 Min
 Withdraw Service Tax  = 5%
 Maximum amount per transaction 80000
 Minimum amount per transaction Allowing withdrawal even previous one is processing 100"
        android:textSize="15dp" />



</LinearLayout>